<mvvm:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:mvvm="clr-namespace:XLabs.Forms.Mvvm;assembly=XLabs.Forms"
               xmlns:controlls="clr-namespace:XamarinAzureAD.Controlls;assembly=XamarinAzureAD"
               x:Class="XamarinAzureAD.Pages.NewsPage"
               BackgroundColor="White">
    <StackLayout VerticalOptions="FillAndExpand" Padding="5,0,5,0">
        <ScrollView>
            <StackLayout>
              <ListView x:Name="list" ItemsSource="{Binding ObservableNews}" HasUnevenRows="true" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                  <DataTemplate>
                    <controlls:NewsListCell></controlls:NewsListCell>
                  </DataTemplate>
                </ListView.ItemTemplate>
              </ListView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</mvvm:BaseView>